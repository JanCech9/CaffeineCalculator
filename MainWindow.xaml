<Window x:Class="CoffeeCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeCounter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Button Content="Calculate" Margin="590,300,60,80" Click="Button_Click" FontSize="18"/>
    <TextBox x:Name="tbx_ess" HorizontalAlignment="Left" Margin="100,100,0,0" TextWrapping="Wrap" Text="Espresso (ml)" VerticalAlignment="Top" Width="120" MouseDoubleClick="tbx_ess_MouseDoubleClick" PreviewTextInput="tbx_ess_PreviewTextInput"/>
    <TextBox x:Name="tbx_V60" HorizontalAlignment="Left" Margin="100,135,0,0" TextWrapping="Wrap" Text="V60 (ml)" VerticalAlignment="Top" Width="120" MouseDoubleClick="tbx_V60_MouseDoubleClick" PreviewTextInput="tbx_V60_PreviewTextInput"/>
    <Label x:Name="lbl_CafCon" Content="Caffeine content" HorizontalAlignment="Left" Margin="500,135,0,0" VerticalAlignment="Top"/>

  </Grid>
</Window>
